{
  "manifest_version": 3,
  "name": "PubNub Console Logger",
  "version": "1.0",
  "description": "Captures browser console logs and publishes them to PubNub",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PubNub Console Logger"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["page_logger.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ]
}
